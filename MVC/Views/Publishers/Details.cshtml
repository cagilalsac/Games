@model PublisherModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Publisher Details";
}

<div class="container">

    <h1>@ViewData["Title"]</h1>

    <div>
        <h4>Publisher</h4>
        <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.GameCountOutput)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.GameCountOutput)
            </dd>
            @if (Model.GameCountOutput > 0)
            {
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.GamesOutput)
                </dt>
                <dd class="col-10">
                    @Html.Raw(Model.GamesOutput)
                </dd>
            }
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
        <a asp-action="Index">Back to List</a>
    </div>

</div>

